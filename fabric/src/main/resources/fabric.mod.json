{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_authors_list}"
  ],
  "contact": {
    "homepage": "${mod_home_url}",
    "sources": "${mod_sources_url}",
    "issues": "${mod_issues_url}"
  },
  "license": "${mod_license}",
  "icon": "assets/itemtransformhelper/textures/item/item_camera_icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "itemtransformhelper.fabric.ItemTransformHelperFabric"
    ]
  },
  "mixins": [
    "itemtransformhelper.mixins.json"
  ],
  "accessWidener": "itemtransformhelper.accesswidener",
  "depends": {
    "fabric": "*",
    "minecraft": "${minecraft_version_condition}",
    "architectury": ">=${architectury_version}"
  }
}
